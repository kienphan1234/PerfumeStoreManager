@page
@model IndexModel
@{
	if (Model.Cart == null || Model.Cart.Count == 0)
	{
		ViewData["cartSize"] = 0;
	}
	else
	{
		ViewData["cartSize"] = Model.Cart.Count;
	}
}

<!DOCTYPE html>
<html lang="zxx" class="no-js">

<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="CodePixar">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>Karma Shop</title>
	<!--
		CSS
		============================================= -->
	<link rel="stylesheet" href="css/linearicons.css">
	<link rel="stylesheet" href="css/font-awesome.min.css">
	<link rel="stylesheet" href="css/themify-icons.css">
	<link rel="stylesheet" href="css/bootstrap.css">
	<link rel="stylesheet" href="css/owl.carousel.css">
	<link rel="stylesheet" href="css/nice-select.css">
	<link rel="stylesheet" href="css/nouislider.min.css">
	<link rel="stylesheet" href="css/ion.rangeSlider.css" />
	<link rel="stylesheet" href="css/ion.rangeSlider.skinFlat.css" />
	<link rel="stylesheet" href="css/magnific-popup.css">
	<link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>


    <div class="container" style="margin-top: 100px">
        <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-5">
                <div class="sidebar-categories">
                    <div class="head">Categories</div>
                    <ul class="main-categories">
                        @foreach (var item in Model.Categories)
                        {
                            <a asp-route-id="@item.CategoryId">
                            <li class="main-nav-list" style="margin:50px">@item.CategoryName</li>
                            </a>
                        }
                        <li>@ViewData["size"]</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-8 col-md-7 order-lg-2 order-md-2">
                @if (Model.Products.Count > 0)
                {
                    <!-- Products section -->
                    <div class="section-title">
                        <h1>Products</h1>
                    </div>
                    <div class="row h-100">
                        @foreach (var item in Model.Products)
                        {
                            <div class="col-md-4 d-flex">
                                <div class="single-product h-100">
                                    <img class="img-fluid" src="@item.ProductImage" alt="">
                                    <div class="product-details">
                                        <h6>
                                            <a asp-page="./Product/Detail" asp-route-id="@item.ProductId">@item.ProductName</a>
                                        </h6>
                                        <div class="price">
                                            <h6>$@item.UnitPrice</h6>
                                        </div>
                                        <div class="prd-bottom mt-auto">
                                            <!-- mt-auto to push button to the bottom -->
                                            <button class="cart-button" onclick="redirectToDetailPage(@item.ProductId)">
                                                <i class="fas fa-eye"></i> <!-- Font Awesome eye icon -->
                                                View Product
                                            </button>
                                            <!-- Add other social-info links as needed -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                { 
                    <!-- New Product section -->
                    <div class="section-title">
                        <h1>New Product</h1>
                    </div>
                    <div class="row h-50">
                        @foreach (var item in Model.NewProducts)
                        {
                            <div class="col-md-4">
                                <div class="single-product">
                                    <img class="img-fluid" src="@item.ProductImage" alt="">
                                    <div class="product-details">
                                        <h6>
                                            <a asp-page="./Product/Detail" asp-route-id="@item.ProductId">@item.ProductName</a>
                                        </h6>
                                        <div class="price">
                                            <h6>$@item.UnitPrice</h6>
                                        </div>
                                        <div class="prd-bottom">
                                            <button class="cart-button" onclick="redirectToDetailPage(@item.ProductId)">
                                                <i class="fas fa-eye"></i> <!-- Font Awesome eye icon -->
                                                View Product
                                            </button>

                                            <!-- Add other social-info links as needed -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
       </div>
       </div>  
	<script src="js/vendor/jquery-2.2.4.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
			crossorigin="anonymous"></script>
	<script src="js/vendor/bootstrap.min.js"></script>
	<script src="js/jquery.ajaxchimp.min.js"></script>
	<script src="js/jquery.nice-select.min.js"></script>
	<script src="js/jquery.sticky.js"></script>
	<script src="js/nouislider.min.js"></script>
	<script src="js/countdown.js"></script>
	<script src="js/jquery.magnific-popup.min.js"></script>
	<script src="js/owl.carousel.min.js"></script>
	<!--gmaps Js-->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjCGmQ0Uq4exrzdcL6rvxywDDOvfAu6eE"></script>
	<script src="js/gmaps.min.js"></script>
	<script src="js/main.js"></script>
</body>
</html>
<script>
    function redirectToDetailPage(productId) {
        // Assuming ./Product/Detail/ is the correct route
        // Change the URL structure based on your routing configuration
        window.location.href = `./Product/Detail/${productId}`;
    }
</script> 

<style>
    .img-fluid {
        width: 200px; /* Set a fixed width for the image */
        height: 200px; /* Set a fixed height for the image */
        object-fit: cover; /* Maintain aspect ratio and cover the entire container */
        display: block; /* Remove extra space below inline-block images */
    }
    /* Custom CSS for product grid */
    .single-product {
        margin-bottom: 20px; /* Adjust this property as needed */
        border: 1px solid #ddd; /* Optional: Add a border for visual separation */
        border-radius: 8px; /* Optional: Add border-radius for rounded corners */
        overflow: hidden; /* Ensure child elements don't overflow */
    }

    .product-details {
        text-align: center; /* Adjust this property as needed */
        padding: 15px; /* Adjust this property as needed */
    }

    .price {
        margin-top: 10px; /* Adjust this property as needed */
    }

    .cart-button {
        margin-top: 10px; /* Adjust this property as needed */
        width: 100%; /* Ensure the button takes full width */
    }
    /* Reset some default styles for button */
    button {
        border: none;
        padding: 0;
        background: none;
        cursor: pointer;
    }

    /* Style for the cart button */
    .cart-button {
        display: flex;
        align-items: center;
        background-color: #3498db;
        color: #fff;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 16px;
    }

        /* Margin to separate the icon and text */
        .cart-button i {
            margin-right: 8px;
        }
</style>