@page
@using ManagerSstore.DAO;
@model ManagerSstore.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<!-- Page Preloder -->
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <h4>Change Password</h4>
                <form  method="post">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>Old Password<span>*</span></p>
                                        <input type="password" name="oldpassword">
                                    </div>
                                </div>
                            </div>
                           
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>New Password<span>*</span></p>
                                        <input type="password" name="newpassword">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>Re-Password<span>*</span></p>
                                        <input type="password" name="repassword">
                                    </div>
                                </div>
                            </div>

                             <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>OTP(Check your email)<span>*</span></p>
                                        <input type="text" name="otp">
                                    </div>
                                </div>
                            </div>
                             <button type="submit" class="site-btn" name="submit">CHANGE PASSWORD</button>
                        <button class="site-btn"><a style="color:white;" asp-page="/Account/GetOTP">GET OTP</a></button>
                        @if (!string.IsNullOrEmpty(Session.notification))
                        {
                            <div class="alert alert-danger" role="alert">
                                @Session.notification
                            </div>
                        }
                    </div>
                    </div>
                </form>
                 
            </div>
        </div>
    </section>
    <style>
    /* Style the form section */
    .checkout {
        background-color: #f8f9fa; /* Set your desired background color */
        padding: 50px 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Style the form container */
    .checkout__form {
        background-color: #ffffff; /* Set the form background color */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        /* Style the heading */
        .checkout__form h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

    /* Style the input fields */
    .checkout__input {
        margin-bottom: 20px;
    }

        .checkout__input p {
            margin-bottom: 5px;
            font-size: 14px;
            color: #555;
        }

        .checkout__input input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

    /* Style the buttons */
    .site-btn {
        background-color: black; /* Set the button background color */
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .site-btn:hover {
            background-color: black; /* Set the hover background color */
        }

        /* Style the link inside the button */
        .site-btn a {
            color: inherit;
            text-decoration: none;
        }

        /* Adjust button spacing */
        .site-btn + .site-btn {
            margin-left: 10px;
        }

    </style>
