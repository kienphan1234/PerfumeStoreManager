@page
@using ManagerSstore.DAO;
@model ManagerSstore.Pages.GetMailForgotModel
@{
    ViewData["Title"] = "Forgot password";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        #preloder {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .checkout {
            background-color: #f8f8f8;
            padding: 60px 0;
        }

        .checkout__form {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        h4 {
            font-size: 24px;
            color: #333;
            margin-bottom: 30px;
            text-align: center;
        }

        form {
            display: block;
            max-width: 100%;
            margin-top: 20px;
        }

        .checkout__input {
            margin-bottom: 25px;
        }

        p {
            font-size: 16px;
            color: #666;
            margin-bottom: 10px;
        }

        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            outline: none;
        }

        button {
            background-color: black;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: black;
        }
    </style>
</head>
<body>
    <section class="checkout spad ">
        <div class="container">
            <div class="checkout__form">
                <h4>Forgot Password</h4>
                <form method="post">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="checkout__input">
                                <p>Email<span>*</span></p>
                                <input type="email" name="email">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="site-btn" name="submit">FORGOT PASSWORD</button>
                    @if (!string.IsNullOrEmpty(Session.notification))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Session.notification
                        </div>
                    }
                </form>
            </div>
        </div>
    </section>

</body>
</html>


