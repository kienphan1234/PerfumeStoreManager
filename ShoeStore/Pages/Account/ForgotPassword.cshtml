@page
@using ManagerSstore.DAO;
@model ManagerSstore.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}
<!-- Page Preloder -->
    
    
    <section class="checkout spad" style="margin-top:100px">
        <div class="container">
            <div class="checkout__form">
                <h4>Fogot Password</h4>
                <form  method="post">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>New Password<span>*</span></p>
                                        <input type="password" name="newpassword">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>Re-Password<span>*</span></p>
                                        <input type="password" name="repassword">
                                    </div>
                                </div>
                            </div>

                             <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>OTP(Check your email)<span>*</span></p>
                                        <input type="text" name="otp">
                                    </div>
                                </div>
                            </div>
                             <button type="submit" class="site-btn" name="submit">SEND</button>
                        <button class="site-btn"><a style="color: white;" asp-page="/Account/GetOTP">GET OTP</a></button>
                        @if (!string.IsNullOrEmpty(Session.notification))
                        {
                            <div class="alert alert-danger" role="alert">
                                @Session.notification
                            </div>
                        }
                    </div>
                    </div>
                </form>
                 
            </div>
        </div>
    </section>
    <style>
    /* Add some general styling to the form */
    .checkout__form {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
    }

        /* Style the heading */
        .checkout__form h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

    /* Style the input fields */
    .checkout__input {
        margin-bottom: 15px;
    }

        .checkout__input p {
            margin-bottom: 5px;
            font-size: 14px;
            color: #555;
        }

        .checkout__input input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

    /* Style the buttons */
    .site-btn {
        background-color: black;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s;
    }

        .site-btn:hover {
            background-color: black;
        }

        /* Adjust the link color within the button */
        .site-btn a {
            color: #fff;
            text-decoration: none;
        }

    </style>